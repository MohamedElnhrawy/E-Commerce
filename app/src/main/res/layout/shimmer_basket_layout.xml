<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/_8sdp">

    <View
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        style="@style/horizontalDividerViewStyle"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <View
        android:id="@+id/tv_item_desc"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginTop="@dimen/_3sdp"
        style="@style/shimmerLayoutStyle"
        app:layout_constraintEnd_toEndOf="@id/tv_item_name"
        app:layout_constraintStart_toStartOf="@id/tv_item_name"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name" />

    <View
        android:id="@+id/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        style="@style/shimmerLayoutStyle"
        app:layout_constraintEnd_toEndOf="@id/tv_item_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_item_name"
        app:layout_constraintTop_toBottomOf="@id/tv_item_desc"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:id="@+id/tv_item_total_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_19sdp"
        style="@style/shimmerLayoutStyle"
        app:layout_constraintEnd_toEndOf="@id/tv_item_name"
        app:layout_constraintStart_toEndOf="@id/tv_item_price"
        app:layout_constraintTop_toTopOf="@id/tv_item_price" />

    <View
        android:id="@+id/cl_quantity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_10sdp"
        style="@style/shimmerLayoutStyle"
        android:paddingStart="@dimen/_6sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:paddingBottom="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_17sdp"
        style="@style/shimmerLayoutStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_price"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
