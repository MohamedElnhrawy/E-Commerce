<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.profile.favorites.FavoriteItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp">


            <View
                android:id="@+id/h_seperator"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/dividerColor"
                app:layout_constraintBottom_toTopOf="@+id/tv_car_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_car_image"
                imageUrl="@{viewModel.imageUrl}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_5sdp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@id/h_seperator"
                app:layout_constraintDimensionRatio="2:0.95"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_logo" />

            <TextView
                android:id="@+id/tv_car_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="start|top"
                android:lines="2"
                android:text="@{viewModel.carName}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_car_image"
                app:layout_constraintWidth_percent="0.5"
                tools:text="Toyota rushâ€ 1.5 A/T F/O " />

            <TextView
                android:id="@+id/tv_car_add_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@{viewModel.carPrice}"
                app:layout_constraintBottom_toBottomOf="@id/tv_car_title"
                app:layout_constraintStart_toStartOf="@+id/tv_car_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_car_title"
                app:layout_constraintWidth_percent="0.5"
                tools:text="400,000 EGP" />

            <ImageView
                android:id="@+id/iv_favorite_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@{viewModel.isFavoriteCar ? @drawable/ic_favorite_on : @drawable/ic_favorite_off}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17" />

            <TextView
                android:id="@+id/tv_car_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="end"
                android:text="@{viewModel.usedcarDate}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_car_add_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_car_title"
                app:layout_constraintTop_toBottomOf="@+id/iv_car_image"
                tools:text="01-01-2020" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
