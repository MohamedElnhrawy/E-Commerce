<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.cardetials.CarDetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/start"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/_20sdp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/end"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/_20sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_5sdp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_car_iamge"
                            imageUrl="@{viewModel.carImage}"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintDimensionRatio="2:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="1.0"
                            app:srcCompat="@drawable/ic_logo_toolbar" />
                        <View
                            android:id="@+id/v_shadow"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_car_iamge"
                            app:layout_constraintTop_toTopOf="@+id/iv_car_iamge"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/white_shadow" />

                        <ImageView
                            android:id="@+id/iv_share_icon"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:onClick="@{()-> viewModel.onShareClicked()}"
                            android:scaleX="2"
                            android:scaleY="2"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.17"
                            app:srcCompat="@drawable/ic_share" />

                        <ImageView
                            android:id="@+id/iv_favorite_icon"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:onClick="@{() -> viewModel.onFavoriteClick()}"
                            android:scaleX="2"
                            android:scaleY="2"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.17"
                            app:srcCompat="@{viewModel.isFavoriteCar ? @drawable/ic_favorite_on : @drawable/ic_favorite_off}" />

                        <TextView
                            android:includeFontPadding="false"
                            android:id="@+id/tv_car_title"
                            android:layout_width="0dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:maxLines="2"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:gravity="start|top"
                            android:text="@{viewModel.carName}"
                            app:layout_constraintTop_toBottomOf="@id/iv_car_iamge"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintWidth_percent="0.5"
                            tools:text="news header" />

                        <TextView
                            android:includeFontPadding="false"
                            android:textColor="@color/semi_black"
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/tv_advance_coast"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="0dp"
                            android:maxLines="2"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:gravity="start|top"
                            android:text="@{viewModel.advanceCoast}"
                            visibleIf="@{!viewModel.advanceCoast.isEmpty()}"
                            app:layout_constraintTop_toBottomOf="@id/tv_car_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintWidth_percent="0.5"
                            tools:text="news header" />

                        <TextView
                            android:id="@+id/tv_car_add_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end|top"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="@{viewModel.carPrice}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_car_title"
                            app:layout_constraintWidth_percent="0.5"
                            tools:text="TextView" />

                        <TextView
                            android:id="@+id/tv_per_month"
                            visibleIf="@{!viewModel.advanceCoast.isEmpty()}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end|top"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="@string/str_per_month"
                            android:textColor="@color/semi_black"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_advance_coast"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_car_title"
                            app:layout_constraintWidth_percent="0.5"
                            tools:text="TextView" />

                        <TextView
                            visibleIf="@{!viewModel.discountTag.isEmpty()}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/discount_bg"
                            android:includeFontPadding="false"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="@{viewModel.discountTag}"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="@string/email" />



                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ads_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/adsColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="0.045"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_advance_coast"
                            app:layout_constraintVertical_bias="0.0"
                            app:layout_constraintWidth_percent="0.97">

                            <TextView
                                android:id="@+id/tv_ads2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_home_ads"
                                android:textColor="@color/buttonTextColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_liters"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:cardElevation="10dp"
                            app:layout_constraintDimensionRatio="2:0.7"
                            app:layout_constraintEnd_toStartOf="@+id/cv_killo_meters"
                            app:layout_constraintHorizontal_bias="0.50"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ads_view"
                            app:layout_constraintWidth_percent="0.25">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_gaz_icon"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_3sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent="0.3"
                                    app:srcCompat="@drawable/ic_gaz" />

                                <TextView
                                    android:id="@+id/tv_liters"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:gravity="center_vertical"
                                    android:text="@{viewModel.carliters}"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/iv_gaz_icon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="100 l" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_killo_meters"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            app:cardElevation="10dp"
                            app:layout_constraintDimensionRatio="2:0.7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.50"
                            app:layout_constraintStart_toEndOf="@+id/cv_liters"
                            app:layout_constraintTop_toBottomOf="@id/ads_view"
                            app:layout_constraintWidth_percent="0.25">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_killometer"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_3sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"

                                    app:layout_constraintWidth_percent="0.3"
                                    app:srcCompat="@drawable/ic_road_km" />

                                <TextView
                                    android:id="@+id/tv_kilometer"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:gravity="center_vertical"
                                    android:text="@{viewModel.carKM}"
                                    app:layout_constraintBottom_toBottomOf="@+id/iv_killometer"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/iv_killometer"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="480 Km" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_doors"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:cardElevation="10dp"
                            app:layout_constraintDimensionRatio="2:0.7"
                            app:layout_constraintEnd_toStartOf="@+id/cv_seats"
                            app:layout_constraintHorizontal_bias="0.50"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cv_killo_meters"
                            app:layout_constraintWidth_percent="0.25">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_doors"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_3sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent="0.3"
                                    app:srcCompat="@drawable/ic_door" />

                                <TextView
                                    android:id="@+id/tv_doors"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:ellipsize="marquee"
                                    android:text="@{viewModel.carNumDoors}"
                                    app:layout_constraintBottom_toBottomOf="@+id/iv_doors"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/iv_doors"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="4 doors" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_seats"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardElevation="10dp"
                            app:layout_constraintDimensionRatio="2:0.7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.50"
                            app:layout_constraintStart_toEndOf="@+id/cv_doors"
                            app:layout_constraintTop_toBottomOf="@id/cv_killo_meters"
                            app:layout_constraintWidth_percent="0.25">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_seats"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_3sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"

                                    app:layout_constraintWidth_percent="0.3"
                                    app:srcCompat="@drawable/ic_seat" />

                                <TextView
                                    android:id="@+id/tv_seats"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:gravity="center_vertical"
                                    android:text="@{viewModel.carNumSeats}"
                                    app:layout_constraintBottom_toBottomOf="@+id/iv_seats"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/iv_seats"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="5 seats" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_news_details"
                            android:layout_width="0dp"
                            android:textDirection="anyRtl"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:text="@{viewModel.carSpecs}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cv_seats"
                            tools:text="Car specs" />

                        <TextView
                            android:id="@+id/tv_photos_header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:text="@string/str_photos"
                            android:textColor="@color/photos_gray"
                            android:textSize="@dimen/_20ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_news_details" />


                        <androidx.recyclerview.widget.RecyclerView
                            tools:visibility="gone"
                            android:id="@+id/rv_budget_brands"
                            adapter="@{viewModel.carImagesAdapter}"
                            viewOrientation="@{viewModel.carImagesOrientation}"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:overScrollMode="never"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constrainedHeight="true"
                            app:layout_constraintDimensionRatio="2:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_photos_header"
                            app:layout_constraintVertical_bias="0"
                            app:layout_constraintWidth_percent="1.0"
                            tools:listitem="@layout/car_image_item_list_layout" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_pdf"
                            visibleIf="@{viewModel.hasCatalogue}"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/credit_card_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rv_budget_brands"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                app:layout_constraintWidth_percent=".4"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/btn_down"
                                app:layout_constraintBottom_toBottomOf="@+id/btn_down"
                                tools:text="@string/str_open"
                                android:text="@{viewModel.catalogueName}"/>

                            <com.gtera.ui.base.buttons.LoadingButton
                                android:id="@+id/btn_down"
                                app:isLoading="@{viewModel.isLoading}"
                                app:clickListener="@{() -> viewModel.startDownloadPDF()}"
                                app:btnText="@{viewModel.catalogueFilepath.isEmpty()? @string/str_download : @string/str_open}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintWidth_percent=".5"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_attributes"
                            adapter="@{viewModel.attributesGroupListAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cons_pdf"
                            tools:itemCount="3"
                            tools:listitem="@layout/car_details_attribute_list_item_layout" />


                        <com.gtera.ui.base.buttons.LoadingButton
                            android:id="@+id/btn_order_now"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:focusable="false"
                            app:clickListener="@{() -> viewModel.orderNow()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rv_attributes"
                            app:text="@string/str_Order_now" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>