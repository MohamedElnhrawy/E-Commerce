<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="vertical">

    <View
        android:id="@+id/models1"
        style="@style/shimmerLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_margin="@dimen/_15sdp"
        android:tint="@color/dividerColor"
        android:src="@drawable/ic_tool_bar_share"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="@+id/models1"
        app:layout_constraintStart_toStartOf="@+id/models1"/>



    <View
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/title"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/dividerColor"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/models1"
        app:layout_constraintStart_toStartOf="@+id/models1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/dividerColor"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/models1"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/models1"
        app:layout_constraintBottom_toTopOf=" @+id/title" />


</androidx.constraintlayout.widget.ConstraintLayout>