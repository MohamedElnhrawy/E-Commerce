<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".5"/>
        <View
            android:background="@color/pale_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".5"/>
        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintEnd_toEndOf="@+id/end"
            android:tint="@color/white"
            android:src="@mipmap/ic_logo"
            android:layout_width="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent=".35"
            android:layout_height="0dp"/>

        <ImageView
            android:src="@drawable/ic_email"
            android:id="@+id/iv_email"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"
            app:layout_constraintStart_toStartOf="@id/start"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".05"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            app:layout_constraintTop_toTopOf="@+id/iv_email"
            app:layout_constraintStart_toEndOf="@+id/iv_email"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            />

        <TextView
            android:includeFontPadding="false"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            tools:text="mmmmmmm"
            app:layout_constraintStart_toStartOf="@+id/tv_email"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.abazaEmail}"
            />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_tablet"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/end"
            app:layout_constraintWidth_percent=".05"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintTop_toTopOf="@+id/iv_email" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_phone"
            app:layout_constraintTop_toTopOf="@+id/iv_phone"
            app:layout_constraintStart_toEndOf="@+id/iv_phone"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            />

        <TextView
            android:id="@+id/phone"
            android:includeFontPadding="false"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            tools:text="mmmmmmm"
            app:layout_constraintStart_toStartOf="@+id/tv_phone"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.abazaPhoneNumber}"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_12sdp"
            android:background="@drawable/credit_card_bg"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintEnd_toEndOf="@id/end"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/semiBlackHeader"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:text="@={viewModel.name}"
                android:imeOptions="actionDone"
                android:id="@+id/et_name"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintEnd_toEndOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                style="@style/contactUsEditText"
                android:textSize="@dimen/_12sdp"
                android:layout_height="@dimen/_30sdp"
                android:inputType="text"/>

            <TextView
                style="@style/semiBlackHeader"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/tv_email_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name"/>

            <EditText
                android:text="@={viewModel.email}"
                android:imeOptions="actionDone"
                android:id="@+id/et_email"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@id/tv_email_header"
                app:layout_constraintEnd_toEndOf="@id/tv_email_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_header"
                style="@style/contactUsEditText"
                android:textSize="@dimen/_12sdp"
                android:layout_height="@dimen/_30sdp"
                android:inputType="text"/>

            <TextView
                style="@style/semiBlackHeader"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/tv_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email"/>

            <EditText
                android:padding="@dimen/_8sdp"
                android:gravity="start|top"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@={viewModel.message}"
                android:imeOptions="actionDone"
                android:id="@+id/et_message"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@id/tv_message"
                app:layout_constraintEnd_toEndOf="@id/tv_message"
                app:layout_constraintTop_toBottomOf="@+id/tv_message"
                android:background="@drawable/edit_text_no_border"
                android:minHeight="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:inputType="textMultiLine"/>

            <ImageButton
                android:onClick="@{()->viewModel.sendEmail()}"
                android:background="@drawable/ic_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_message"
                android:layout_marginTop="@dimen/_20sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="@dimen/_14sdp"
                android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintGuide_end="@dimen/_14sdp"
            android:orientation="vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.gtera.ui.profile.contactus.ContactUsVM" />
    </data>
</layout>
