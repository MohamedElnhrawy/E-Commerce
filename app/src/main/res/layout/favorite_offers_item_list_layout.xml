<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.profile.favorites.FavoriteItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_news_image"
                imageUrl="@{viewModel.imageUrl}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/top_rounded_corners_white_bg"
                android:padding="@dimen/_5sdp"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="1:0.4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_logo" />

            <TextView
                android:id="@+id/tv_news_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:gravity="start"
                android:layout_marginStart="@dimen/_4sdp"
                app:layout_constraintWidth_percent="0.45"
                android:text="@{viewModel.offerName}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_news_image"
                tools:text="Car name" />

            <TextView
                android:id="@+id/tv_offer_installment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="@{viewModel.offerMonthly}"
                tools:text="Installment"
                android:textStyle="bold"
                android:gravity="end"
                app:layout_constraintWidth_percent="0.45"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_news_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_news_name" />

            <TextView
                android:id="@+id/tv_offer_advance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="start"
                android:text="@{viewModel.offerAdvaced}"
                tools:text="Advance value"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintWidth_percent="0.60"
                android:layout_marginStart="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_news_name" />

            <TextView
                android:id="@+id/tv_offer_per_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.35"
                android:text="@string/str_home_offers_per_month"
                tools:text="Per month"
                android:gravity="end"
                android:textSize="@dimen/_12ssp"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_offer_advance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_offer_advance" />

            <TextView
                android:id="@+id/tv_offer_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="50% off"
                android:text="@{viewModel.offerDiscount}"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:paddingBottom="@dimen/_3sdp"
                style="@style/AppTheme.TextStyle.Header.Medium.White"
                android:background="@drawable/discount_tag_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
