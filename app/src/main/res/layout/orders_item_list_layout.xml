<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.ordernow.list.OrderListItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_order_car_image"
                imageUrl="@{viewModel.orderCarImageUrl}"
                roundRadius="@{25}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:scaleType="center"
                app:layout_constraintDimensionRatio="2:0.95"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_logo" />

            <TextView
                android:id="@+id/tv_order_car_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@{viewModel.orderCarName}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_order_car_image"
                app:layout_constraintWidth_percent="0.5"
                tools:text="order car Name" />

            <TextView
                android:id="@+id/tv_order_car_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="end|center_vertical"
                android:text="@{viewModel.orderCarPrice}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_order_car_image"
                app:layout_constraintWidth_percent="0.5"
                tools:text="Model Name" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="2"
                android:scaleY="2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14"
                app:srcCompat="@drawable/ic_share" />


            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="2"
                android:scaleY="2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17"
                app:srcCompat="@drawable/ic_favorite_off" />


            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/insurance_status_background"
                android:backgroundTint='@{viewModel.orderStatus.equals("1") ? @color/pendingInsuranceColor :viewModel.orderStatus.equals("2") ? @color/confirmedInsuranceColor: viewModel.orderStatus.equals("3") ? @color/cancelledInsuranceColor:@color/PayedInsuranceColor }'
                android:gravity="center_vertical|center_horizontal"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="@{viewModel.orderStatus}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/iv_order_car_image"
                app:layout_constraintStart_toStartOf="@id/iv_order_car_image"
                app:layout_constraintWidth_percent="0.25"
                tools:text="confirmed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
