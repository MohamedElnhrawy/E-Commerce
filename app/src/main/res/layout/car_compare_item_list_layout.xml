<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.mycars.carcompare.list.CarCompareItemViewModel" />

    </data>

    <com.gtera.ui.base.swip.SwipeLayout
        android:id="@+id/sv_basket_item_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true"
        app:show_mode="pull_out">

    <LinearLayout
        android:id="@+id/swiped_view"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/iv_swipe_item_remove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_delete" />

        </LinearLayout>


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/h_seperator"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/dividerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_car_title" />
            <ImageView
                android:id="@+id/iv_car_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                imageUrl="@{viewModel.imageUrl}"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/h_seperator"
                app:layout_constraintDimensionRatio="2:0.95"
                app:srcCompat="@mipmap/ic_logo" />

            <TextView
                android:id="@+id/tv_car_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.5"
                android:text="@{viewModel.carName}"
                android:gravity="start|center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_car_image"
                tools:text="news header" />

            <CheckBox
                android:id="@+id/tv_car_add_date"
                android:layout_width="0dp"
                android:checked="@{viewModel.isSelected}"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:buttonTint="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_share_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="2"
                android:scaleY="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.17"
                app:srcCompat="@drawable/ic_share" />

            <ImageView
                android:id="@+id/iv_favorite_icon"
                android:layout_width="0dp"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_height="0dp"
                app:srcCompat="@{viewModel.isFavoriteCar ? @drawable/ic_favorite_on : @drawable/ic_favorite_off}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    </com.gtera.ui.base.swip.SwipeLayout>
</layout>
