<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/borderd_search_box"
    android:padding="@dimen/_2sdp"
    android:orientation="vertical">


    <View
        android:id="@+id/v_order_Image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:background="@drawable/rounded_corners_gray"
        android:backgroundTint="@color/ShimmerViewColor"
        app:layout_constraintDimensionRatio="1:0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_order_second_title"
        style="@style/shimmerLayoutStyle"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@+id/v_order_Image"
        app:layout_constraintTop_toBottomOf="@+id/v_message_date" />
    <View
        android:id="@+id/v_order_second"
        style="@style/shimmerLayoutStyle"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@+id/v_order_Image"
        app:layout_constraintTop_toBottomOf="@+id/v_order_second_title" />

    <View
        android:id="@+id/v_order_title"
        style="@style/shimmerLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/v_order_second_title"
        app:layout_constraintTop_toBottomOf="@+id/v_message_date" />

    <View
        android:id="@+id/v_order"
        style="@style/shimmerLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/v_order_second_title"
        app:layout_constraintTop_toBottomOf="@+id/v_order_title" />

    <View
        android:id="@+id/v_message_date"
        style="@style/shimmerLayoutStyle"
        android:background="@color/dividerColor"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/v_order_second_title"
        app:layout_constraintBottom_toBottomOf="@+id/v_order_Image"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@color/dividerColor"
        app:layout_constraintStart_toStartOf="@+id/v_order_Image"
        app:layout_constraintTop_toTopOf="@+id/v_order_Image" />

    <ImageView
        android:layout_margin="@dimen/_15sdp"
        android:tint="@color/dividerColor"
        android:src="@drawable/ic_favorite_empty"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="@+id/v_order_Image"
        app:layout_constraintEnd_toEndOf="@+id/v_order_Image"/>

</androidx.constraintlayout.widget.ConstraintLayout>