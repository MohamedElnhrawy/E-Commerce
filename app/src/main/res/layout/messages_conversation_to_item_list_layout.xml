<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.profile.messages.details.MessageDetailsItemViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_gray"
        android:paddingBottom="@dimen/_10sdp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_sender_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_sending_time"
            app:layout_constraintWidth_percent="0.7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_message_photo"
                    imageUrl="@{viewModel.messageImage}"
                    roundRadius="@{50}"
                    visibleIf="@{!viewModel.messageImage.empty}"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:0.6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_messagebody"
                    app:srcCompat="@drawable/ic_my_cars_empty" />

                <TextView
                    android:id="@+id/tv_messagebody"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="start|center_vertical"
                    android:text="@{viewModel.messageBody}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Hi Ali" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_sender_image"
            imageUrl="@{viewModel.senderImageUrl}"
            roundRadius="@{150}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            placeHolderImage="@{viewModel.placeHolder}"
            android:layout_margin="@dimen/_3sdp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.14"
            app:srcCompat="@drawable/ic_address" />

        <TextView
            android:id="@+id/tv_sending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@{viewModel.messageDate}"
            app:layout_constraintStart_toEndOf="@+id/iv_sender_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="01-01-2020" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    </com.abazaautotrade.ui.base.swip.SwipeLayout>-->
</layout>
