<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.usedcardetails.attributes.CarSpecsItemVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_grey">

        <TextView
            android:includeFontPadding="false"
            android:textAlignment="viewStart"
            android:id="@+id/tv_info_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@{viewModel.itemTitle}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_info_value_txt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="info header" />

        <TextView
            android:layout_marginEnd="@dimen/_8sdp"
            android:includeFontPadding="false"
            android:textAlignment="viewEnd"
            app:layout_constraintStart_toEndOf="@+id/tv_info_title_txt"
            android:id="@+id/tv_info_value_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@{viewModel.itemValue}"
            app:layout_constraintBottom_toBottomOf="@+id/color"
            app:layout_constraintEnd_toStartOf="@+id/color"
            app:layout_constraintTop_toTopOf="@id/color"
            tools:text="info line" />

        <ImageView
            android:id="@+id/color"
            tintColor="@{viewModel.color}"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_1sdp"
            visibleIf="@{viewModel.showColorBullet}"
            android:background="@drawable/color_item_bg"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/tv_info_title_txt"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_info_title_txt"
            app:srcCompat="@drawable/color_item_bg" />



        <View
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="1dp"
            android:background="@color/dividerColor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
