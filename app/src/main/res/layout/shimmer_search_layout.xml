<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_grey"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="vertical">


    <View
        android:id="@+id/header"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/headerAll"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/brand1"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />


    <View
        android:id="@+id/brand2"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/brand1"
        app:layout_constraintTop_toTopOf="@id/brand1" />

    <View
        android:id="@+id/brand3"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/brand2"
        app:layout_constraintTop_toTopOf="@id/brand2" />


    <View
        android:id="@+id/relatedAll"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/brand3" />



    <View
        android:id="@+id/related1"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relatedAll" />

    <View
        android:id="@+id/related2"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintStart_toEndOf="@id/related1"
        app:layout_constraintTop_toBottomOf="@id/relatedAll" />

    <View
        android:id="@+id/related3"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintStart_toEndOf="@id/related2"
        app:layout_constraintTop_toBottomOf="@id/relatedAll" />


</androidx.constraintlayout.widget.ConstraintLayout>