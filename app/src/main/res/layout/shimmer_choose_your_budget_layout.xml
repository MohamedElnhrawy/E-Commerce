<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_30sdp"

    android:orientation="vertical">

    <View
        android:layout_marginStart="@dimen/_12sdp"
        android:id="@+id/brand1"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_marginStart="@dimen/_8sdp"
        android:id="@+id/brand2"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/brand1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_marginStart="@dimen/_8sdp"
        android:id="@+id/brand3"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/brand2"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_marginStart="@dimen/_8sdp"
        android:id="@+id/brand4"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/brand3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/ic_down_arrow_red"
        android:tint="@color/dividerColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view3"
        style="@style/shimmerLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>