<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.mycars.add.MyCarAddImageItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        width="@{viewModel.itemSize}"
        app:cardUseCompatPadding="true"
        height="@{viewModel.itemHeight}"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_prescription"
                imageBitmap="@{viewModel.imageBitmap}"
                imagePath="@{viewModel.imagePath}"
                isUri="@{viewModel.isUriPath}"
                roundRadius="@{viewModel.imageRoundedCorner}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_item_remove"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_2sdp"
                visibleIf="@{viewModel.isUriPath}"
                android:src="@drawable/ic_insurance_cancelled"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>