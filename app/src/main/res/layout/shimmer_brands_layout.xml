<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/str_brands_screen"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Brands" />

    <LinearLayout
        android:id="@+id/tv_brands_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/borderd_search_box"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/tv_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_header"
        app:layout_constraintTop_toTopOf="@id/tv_header">

        <TextView
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:dropDownWidth="match_parent"
            android:hint="@string/find_the_brand"
            android:maxLines="1"
            android:paddingStart="@dimen/dim_search_bar_text_padding_start"
            android:paddingEnd="@dimen/dim_search_bar_text_padding_end"
            android:singleLine="true"
            android:text="@string/find_the_brand"
            android:gravity="start|center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:textDirection="locale"
            android:textSize="@dimen/dim_search_bar_text_size"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_search"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dim_search_bar_icon_padding"
            android:scaleType="centerInside"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/search_bar"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_bar"
            app:srcCompat="@drawable/ic_search" />

    </LinearLayout>

    <View
        android:id="@+id/brand1"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />


    <View
        android:id="@+id/brand2"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintEnd_toStartOf="@+id/brand3"
        app:layout_constraintStart_toEndOf="@id/brand1"
        app:layout_constraintTop_toTopOf="@id/brand1" />

    <View
        android:id="@+id/brand3"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_brands_search"
        app:layout_constraintTop_toTopOf="@id/brand2" />


    <View
        android:id="@+id/brand4"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_header"
        app:layout_constraintTop_toBottomOf="@+id/brand1" />


    <View
        android:id="@+id/brand5"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintEnd_toStartOf="@+id/brand6"
        app:layout_constraintStart_toEndOf="@id/brand4"
        app:layout_constraintTop_toTopOf="@id/brand4" />

    <View
        android:id="@+id/brand6"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_brands_search"
        app:layout_constraintTop_toTopOf="@id/brand4" />


    <View
        android:id="@+id/brand7"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_header"
        app:layout_constraintTop_toBottomOf="@+id/brand4" />


    <View
        android:id="@+id/brand8"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintEnd_toStartOf="@+id/brand9"
        app:layout_constraintStart_toEndOf="@id/brand7"
        app:layout_constraintTop_toTopOf="@id/brand7" />

    <View
        android:id="@+id/brand9"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_brands_search"
        app:layout_constraintTop_toTopOf="@id/brand7" />

    <View
        android:id="@+id/brand10"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_header"
        app:layout_constraintTop_toBottomOf="@+id/brand7" />


    <View
        android:id="@+id/brand11"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintEnd_toStartOf="@+id/brand12"
        app:layout_constraintStart_toEndOf="@id/brand10"
        app:layout_constraintTop_toTopOf="@id/brand10" />

    <View
        android:id="@+id/brand12"
        style="@style/shimmerLayoutStyle"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_brands_search"
        app:layout_constraintTop_toTopOf="@id/brand10" />



</androidx.constraintlayout.widget.ConstraintLayout>