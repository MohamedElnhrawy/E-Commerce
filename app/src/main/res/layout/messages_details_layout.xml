<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.profile.messages.details.MessageDetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pale_gray">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_message_conversations"
            adapter="@{viewModel.messagesDetailsListAdapter}"
            viewOrientation="@{viewModel.messagesDetailsListOrientation}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingBottom="@dimen/_45sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:itemCount="3"
            tools:listitem="@layout/messages_conversation_from_item_list_layout" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/rounded_sides_wihte_with_gray_strock"
            android:ems="10"
            android:textSize="@dimen/_15ssp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:inputType="textPersonName"
            android:text="@={viewModel.currentMessage}"
            android:hint="@string/str_type_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:onClick="@{() -> viewModel.sendMessage()}"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName"
            app:srcCompat="@drawable/ic_send_message" />

        <ImageView
            android:id="@+id/iv_attach_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="2"
            android:scaleX="2"
            android:onClick="@{() -> viewModel.showChoosePhotoDialog()}"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toStartOf="@+id/iv_send_message"
            app:layout_constraintBottom_toBottomOf="@+id/iv_send_message"
            app:layout_constraintTop_toTopOf="@+id/iv_send_message"
            app:srcCompat="@drawable/ic_attach"
            tools:layout_editor_absoluteY="743dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>