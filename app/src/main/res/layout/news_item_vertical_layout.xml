<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.home.viewmodels.NewsItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:id="@+id/iv_news_image"
                imageUrl="@{viewModel.imageUrl}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/top_rounded_corners_white_bg"
                android:padding="@dimen/_5sdp"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="1.36:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.37"
                app:srcCompat="@mipmap/ic_logo" />

            <TextView
                android:id="@+id/tv_news_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="start|top"
                android:textDirection="anyRtl"
                android:maxLines="3"
                android:text="@{viewModel.newsTitle}"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_news_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_news_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed...." />

            <TextView
                android:id="@+id/tv_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.newsDate}"
                android:textColor="@color/descriptionGrayColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_news_name"
                tools:text="Jul 1, 2018, 01:59 GMT" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
