<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.ordernow.OrderNowViewModel" />

    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pale_gray"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_30sdp">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_20sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_20sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_car_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_car_image"
                        imageUrl="@{viewModel.carImage}"
                        roundRadius="@{20}"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/_3sdp"
                        android:scaleType="fitCenter"
                        app:layout_constraintDimensionRatio="1:0.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/ic_logo_toolbar" />

                    <TextView
                        android:id="@+id/tv_car_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@{viewModel.carName}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_car_image"
                        app:layout_constraintWidth_percent="0.5"
                        tools:text="Kia Carenz" />

                    <TextView
                        android:id="@+id/tv_car_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="end"
                        android:text="@{viewModel.carPrice}"
                        app:layout_constraintBottom_toBottomOf="@id/tv_car_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_car_name"
                        app:layout_constraintWidth_percent="0.5"
                        tools:text="200,000 EGP" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_color"
                style="@style/Header.TextView"
                visibleIf="@{viewModel.colorsList.size()>0}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:includeFontPadding="false"
                android:text="@string/str_add_my_car_Color"
                android:textSize="@dimen/_15ssp"
                app:labelColor="@color/editTextHeaderTextColor"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/cv_car_header"
                tools:text="@string/str_colors" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_colors_values"
                gridAdapter="@{viewModel.colorsListAdapter}"
                horizontalGrid="@{true}"
                spanCount="@{viewModel.colorsSpanCount}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/tv_color"
                app:spanCount="7"
                tools:itemCount="12"
                tools:listitem="@layout/filter_item_color_layout" />

            <TextView
                android:id="@+id/tv_color_error"
                visibleIf="@{viewModel.colorSelectionStatus}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_order_now_color_validation"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_7ssp"
                android:textColor="@color/editTextErrorTextColor"
                app:layout_constraintEnd_toEndOf="@id/rv_colors_values"
                app:layout_constraintStart_toStartOf="@id/rv_colors_values"
                app:layout_constraintTop_toBottomOf="@id/rv_colors_values"
                tools:text="@string/str_order_now_color_validation" />


            <TextView
                android:id="@+id/tv_delivery_places"
                style="@style/Header.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:includeFontPadding="false"
                android:text="@string/str_order_now_delivery_place"
                android:textSize="@dimen/_15ssp"
                app:labelColor="@color/editTextHeaderTextColor"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/rv_colors_values"
                tools:text="@string/str_order_now_delivery_place" />


            <Spinner
                android:id="@+id/delivery_places_drop_down"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                onEntrySelected="@{viewModel.deliveryPlacesListener}"
                spinnerItems="@{viewModel.deliveryPlacesNames}"
                spinnerSelectedItem="@{viewModel.deliveryPlacesSelectedIndex}"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/spinner_bg"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/tv_delivery_places" />


            <TextView
                android:id="@+id/tv_branch"
                style="@style/Header.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:includeFontPadding="false"
                android:text="@string/str_car_insurance_branch"
                android:textSize="@dimen/_15ssp"
                app:labelColor="@color/editTextHeaderTextColor"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/delivery_places_drop_down"
                tools:text="@string/str_car_insurance_branch" />


            <Spinner
                android:id="@+id/branches_drop_down"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                onEntrySelected="@{viewModel.branchesListener}"
                spinnerItems="@{viewModel.branchesNames}"
                spinnerSelectedItem="@{viewModel.branchesSelectedIndex}"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/spinner_bg"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/tv_branch" />

            <TextView
                android:id="@+id/tv_spinner_branches_error"
                visibleIf="@{viewModel.branchesSelectionStatus}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_order_now_branch_validation"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_7ssp"
                android:textColor="@color/editTextErrorTextColor"
                app:layout_constraintEnd_toEndOf="@id/branches_drop_down"
                app:layout_constraintStart_toStartOf="@id/branches_drop_down"
                app:layout_constraintTop_toBottomOf="@id/branches_drop_down"
                tools:text="Error Message" />

            <RadioButton
                android:id="@+id/rb_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:checked="@={viewModel.isCashOrder}"
                android:textColor="@{viewModel.isCashOrder? @color/colorPrimary:@color/black}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cash"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintTop_toBottomOf="@+id/tv_advanced_payment_error" />

            <RadioButton
                android:id="@+id/rb_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:buttonTint="@color/colorPrimary"
                android:checked="@={!viewModel.isCashOrder}"
                android:textColor="@{!viewModel.isCashOrder? @color/colorPrimary:@color/black}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_premium"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintTop_toBottomOf="@+id/h_seperator" />

            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_order_now_cash"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/et_advanced_payment"
                tools:text="Cash" />

            <TextView
                android:id="@+id/tv_premium"
                style="@style/Header.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Premium"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/h_seperator"
                tools:layout_editor_absoluteX="38dp" />

            <View
                android:id="@+id/h_seperator"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/dividerColor"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/tv_cash" />

            <CheckBox
                android:id="@+id/cb_car_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:buttonTint="@color/colorPrimary"
                android:checked="@={viewModel.hasCarLisence}"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintTop_toBottomOf="@id/rb_premium" />

            <TextView
                android:id="@+id/tv_car_license"
                style="@style/Header.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_order_now_need_license"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@+id/cb_car_license"
                app:layout_constraintEnd_toStartOf="@+id/cb_car_license"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toTopOf="@+id/cb_car_license" />

            <TextView
                android:id="@+id/tv_car_license_disclaimer"
                android:layout_width="0dp"
                visibleIf="@{viewModel.hasCarLisence}"
                android:layout_height="wrap_content"
                android:text="@string/str_order_now_need_license_disclamer"
                app:layout_constraintEnd_toStartOf="@+id/end"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/tv_car_license" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_power_attorny_names"
                adapter="@{viewModel.powerAttorneyAdapter}"
                visibleIf="@{viewModel.hasCarLisence}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/tv_car_license_disclaimer"
                tools:itemCount="2"
                tools:listitem="@layout/attorny_item_layout" />


            <com.gtera.ui.base.edittext.EditText
                android:id="@+id/et_advanced_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_view_padding"
                android:textColor="@color/colorTextSecondary"
                app:editText="@={viewModel.advancedPaymentText}"
                app:hint="@string/str_advance_payment"
                app:inputType="number"
                app:isSuccess="@{viewModel.advancedPaymentTextStatus}"
                app:label="@string/str_advance_payment"
                app:labelColor="@color/editTextHeaderTextColor"
                app:labelSize="@dimen/_15ssp"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/tv_spinner_branches_error"
                app:message="@{viewModel.advancedPaymentTextError}" />

            <TextView
                android:id="@+id/tv_advanced_payment_error"
                visibleIf="@{viewModel.advancedPaymentStatus}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_profile_edit_governorate_validation"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_7ssp"
                android:textColor="@color/editTextErrorTextColor"
                app:layout_constraintEnd_toEndOf="@id/et_advanced_payment"
                app:layout_constraintStart_toStartOf="@id/et_advanced_payment"
                app:layout_constraintTop_toBottomOf="@id/et_advanced_payment"
                tools:text="Error Message" />


            <CheckBox
                android:id="@+id/cb_car_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:buttonTint="@color/colorPrimary"
                android:checked="@={viewModel.hasCarInsurance}"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintTop_toBottomOf="@+id/tv_attorney_images_error" />

            <TextView
                android:id="@+id/tv_car_insurance"
                style="@style/Header.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_order_now_with_car_insurance"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@+id/cb_car_insurance"
                app:layout_constraintEnd_toStartOf="@+id/cb_car_insurance"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toTopOf="@+id/cb_car_insurance" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_attorney_images"
                gridAdapter="@{viewModel.imagesAdapter}"
                horizontalGrid="@{true}"
                spanCount="@{1}"
                visibleIf="@{viewModel.imagesList.size()>0}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/end"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/rv_power_attorny_names"
                app:spanCount="3"
                tools:itemCount="3"
                tools:listitem="@layout/my_car_image_item_layout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_upload_power_attorney"
                visibleIf="@{viewModel.hasCarLisence}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:onClick="@{()-> viewModel.showAddPhotosDialog()}"
                app:layout_constraintEnd_toEndOf="@+id/end"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/rv_attorney_images">

                <ImageView
                    android:id="@+id/iv_power_attorney_upload"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_12sdp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.07"
                    app:srcCompat="@drawable/ic_power_attorney_upload" />

                <TextView
                    android:id="@+id/tv_power_attorney_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/str_order_now_upload_power_attorny_photos"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/iv_power_attorney_upload"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_power_attorney_upload"
                    app:layout_constraintTop_toTopOf="@id/iv_power_attorney_upload" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_attorney_images_error"
                visibleIf="@{viewModel.advancedPaymentStatus}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_profile_edit_governorate_validation"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_7ssp"
                android:textColor="@color/editTextErrorTextColor"
                app:layout_constraintEnd_toEndOf="@id/tv_attorney_images_error"
                app:layout_constraintStart_toStartOf="@id/tv_attorney_images_error"
                app:layout_constraintTop_toBottomOf="@id/tv_attorney_images_error"
                tools:text="asdasdasdsadsad" />


            <com.gtera.ui.base.buttons.LoadingButton
                android:id="@+id/btn_order_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:focusable="false"
                app:clickListener="@{() -> viewModel.orderCar()}"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/tv_car_insurance"
                app:text="@string/str_Order_now" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>