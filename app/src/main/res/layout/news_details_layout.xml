<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.news.newsdetails.NewsDetailsViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/end"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/iv_car_iamge"
                    imageUrl="@{viewModel.newsImage}"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintDimensionRatio="2:1.4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ads_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/adsColor"
                    app:layout_constraintDimensionRatio="8:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_car_iamge"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/tv_ads1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_home_ads"
                        android:textColor="@color/buttonTextColor"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_car_title"
                    style="@style/AppTheme.TextStyle.Header.Black"
                    android:layout_width="0dp"
                    android:textDirection="anyRtl"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/_18sdp"
                    android:text="@{viewModel.newsTitle}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ads_view"
                    tools:text="Mercedes-Benz automobile production company....." />

                <TextView
                    android:id="@+id/tv_news_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textDirection="anyRtl"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="@{viewModel.newsDetails}"
                    app:layout_constraintEnd_toEndOf="@id/tv_car_title"
                    app:layout_constraintStart_toStartOf="@id/tv_car_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_car_title"
                    tools:text="السلام عليكم ورحمة الله وبركاته" />

                <TextView
                    android:id="@+id/tv_news_date"
                    style="@style/AppTheme.TextStyle.Description"
                    visibleIf="@{!viewModel.newsDate.isEmpty()}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:textDirection="anyRtl"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@{viewModel.newsDate}"
                    app:layout_constraintEnd_toEndOf="@id/tv_car_title"
                    app:layout_constraintStart_toStartOf="@id/tv_car_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_news_details"
                    tools:text="Jul 1, 2018, 01:59 GMT" />

                <TextView
                    visibleIf="@{viewModel.hasRelated}"
                    android:id="@+id/tv_similar_header"
                    style="@style/AppTheme.TextStyle.Header.Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:text="@string/str_similar_news"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_news_date" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_budget_brands"
                    adapter="@{viewModel.relatedNewsListAdapter}"
                    viewOrientation="@{viewModel.relateNewsOrientation}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingStart="@dimen/_10sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_similar_header"
                    tools:itemCount="3"
                    tools:listitem="@layout/news_item_horizontal_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</layout>