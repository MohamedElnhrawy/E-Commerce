<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gtera.ui.home.viewmodels.TotDealsItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/h_seperator"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/dividerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_car_title" />
            <ImageView
                android:id="@+id/iv_car_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                imageUrl="@{viewModel.imageUrl}"
                android:scaleType="fitXY"
                android:padding="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/h_seperator"
                app:layout_constraintDimensionRatio="2:1.1"
                app:srcCompat="@mipmap/ic_logo" />

            <TextView
                android:id="@+id/tv_car_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="16dp"
                android:gravity="start|center_vertical"
                android:text="@{viewModel.topDealName}"
                app:layout_constraintEnd_toEndOf="@+id/h_seperator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_car_image"
                tools:text="top deals header" />

            <TextView
                android:id="@+id/tv_car_add_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="start"
                android:text="@{viewModel.topDealprice}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_car_title"
                tools:text="Top Deal price" />

            <ImageView
                android:id="@+id/iv_favorite_icon"
                android:layout_width="0dp"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_height="0dp"
                app:srcCompat="@{viewModel.isFavoriteCar ? @drawable/ic_favorite_on : @drawable/ic_favorite_off}"
                app:layout_constraintWidth_percent="0.17"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
