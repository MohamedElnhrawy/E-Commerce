<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.gtera.ui.choosebudget.viewmodels.BudgetBrandItemViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_gray"
       >


        <ImageView
            android:id="@+id/iv_budget_brand_image"
            imageUrl="@{viewModel.brandImage}"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_logo" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="@{viewModel.brandName}"
            app:layout_constraintEnd_toStartOf="@id/iv_selected_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_budget_brand_image"
            app:layout_constraintTop_toTopOf="@id/iv_budget_brand_image"
            tools:text="TextView" />

        <TextView
            android:id="@+id/brand_count"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.brandCount}"
            app:layout_constraintBottom_toBottomOf="@id/iv_budget_brand_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_budget_brand_image"
            app:layout_constraintTop_toBottomOf="@+id/brand_name"
            tools:text="TextView" />
        <View
            android:id="@+id/h_seperator"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dividerColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_budget_brand_image" />

        <View
            android:id="@+id/h_seperator2"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="0dp"
            android:background="@color/dividerColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <View
            android:id="@+id/h_seperator3"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="0dp"
            android:background="@color/dividerColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/iv_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            visibleIf="@{viewModel.isSelected}"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_selected" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>